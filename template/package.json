{
  "name": "create-sumup-next-app",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --watch",
    "test:ci": "mkdir -p __reports__ && jest --ci --coverage --runInBand --json --outputFile=__reports__/jest-results.json"
  },
  "dependencies": {
    "@emotion/core": "^10.0.0",
    "@emotion/styled": "^10.0.0",
    "@sumup/circuit-ui": "^2.0.0-alpha",
    "emotion": "^10.0.0",
    "emotion-server": "^10.0.0",
    "emotion-theming": "^10.0.0",
    "lodash": "^4.17.0",
    "next": "^9.3.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@emotion/babel-preset-css-prop": "^10.0.0",
    "@sumup/foundry": "^2.0.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.0.1",
    "@types/jest": "^25.2.1",
    "@types/jest-axe": "^3.2.2",
    "babel-jest": "^25.3.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "babel-plugin-lodash": "^3.3.4",
    "jest": "^25.3.0",
    "jest-axe": "^3.4.0",
    "jest-emotion": "^10.0.32",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    },
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "testPathIgnorePatterns": ["./.next/", "./node_modules/"],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.tsx"
    ],
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "coverageDirectory": "./__coverage__",
    "coverageReporters": [
      "cobertura",
      "text-summary",
      "html"
    ],
    "collectCoverageFrom": [
      "components/**/*.(js|jsx|ts|tsx)",
      "pages/**/*.(js|jsx|ts|tsx)",
      "services/**/*.(js|jsx|ts|tsx)",
      "!components/**/index.(js|jsx|ts|tsx)",
      "!**/*.d.ts",
      "!/public/",
      "!/node_modules/"
    ]
  }
}
